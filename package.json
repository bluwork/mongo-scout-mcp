{
  "name": "mongo-scout-mcp",
  "version": "1.2.0",
  "description": "Scout your MongoDB databases with AI - A production-ready MCP server with safety features, live monitoring, and data quality tools",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prepublish": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "chmod +x bin/cli.js"
  },
  "bin": {
    "mongo-scout-mcp": "./bin/cli.js",
    "mongo-scout": "./bin/cli.js"
  },
  "keywords": [
    "mongodb",
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "claude",
    "database"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "mongodb": "^6.20.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@types/node": "^22.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  }
}
